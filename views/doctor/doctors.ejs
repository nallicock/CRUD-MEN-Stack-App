<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include("../../partials/header.ejs") %>
    <h1>Doctor LIST</h1>
    <a href="/doctors/new"><button>Add Doctor</button></a>
    <% if(doctors.length) { %>
    <table>
      <thead>
        <tr>
          <th>Doctor Name</th>
          <th>Doctor Title</th>
        </tr>
        <% doctors.forEach(function(d) { %>
        <tr>
          <td><%= d.name %></td>
          <td><%= d.title %></td>
          <td>
            <a href="/doctors/<%=d._id%>"><button>Show Details</button></a>
          </td>
          <td>
            <a href="/doctors/update/<%= d._id %>"
              ><button>Update Doctor</button></a
            >
          </td>
          <td>
            <form action="/doctors/<%= d._id %>?_method=DELETE" method="POST">
              <button type="submit">DELETE</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </thead>
    </table>
    <% } else { %>
    <h3>No Doctors Yet</h3>
    <% } %>
  </body>
</html>
